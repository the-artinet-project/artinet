{
  "name": "@artinet/agent-relay",
  "version": "0.1.1",
  "description": "A library for discovering and relaying messages between A2A enabled AI agents via the @artinet/sdk.",
  "author": "artinet",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-artinet-project/artinet.git"
  },
  "issues": {
    "url": "https://github.com/the-artinet-project/artinet/issues"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "artinet",
    "agent2agent",
    "a2a",
    "ai",
    "agent",
    "artificial intelligence"
  ],
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "rootDir": ".",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist node_modules package-lock.json",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "package-test": "npm run build && npm pack && docker build -f ./deployment/test.dockerfile -t install-test . && docker run --rm install-test && rm artinet-agent-relay-*.tgz",
    "prepublishOnly": "npm run clean:all && npm i && npm run build && npm test"
  },
  "dependencies": {
    "orc8": "^0.1.2"
  },
  "peerDependencies": {
    "@a2a-js/sdk": "^0.3.7",
    "portscanner": "^2.2.0"
  },
  "capabilities": {
    "portscanner": {
      "optional": true
    },
    "@a2a-js/sdk": {
      "optional": false
    }
  },
  "devDependencies": {
    "@a2a-js/sdk": "^0.3.7",
    "@cfworker/json-schema": "^4.1.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@types/portscanner": "^2.1.4",
    "eslint": "^9.25.1",
    "jest": "29.7.0",
    "portscanner": "^2.2.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "engines": {
    "node": ">=18.9.1"
  }
}
